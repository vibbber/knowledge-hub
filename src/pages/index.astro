---
import Base from '../layouts/Base.astro';
import { strategies, topics, types } from '../data/strategies';

const topicGradients: Record<string, { gradient: string; icon: string }> = {
  'Behavior': { gradient: 'linear-gradient(135deg, #f5a623 0%, #e84a5f 100%)', icon: 'üî•' },
  'Development': { gradient: 'linear-gradient(135deg, #96e6a1 0%, #d4fc79 100%)', icon: 'üå±' },
  'Environment': { gradient: 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)', icon: 'üè†' },
  'Math': { gradient: 'linear-gradient(135deg, #ffeaa7 0%, #dfe6e9 100%)', icon: '‚ûó' },
  'Movement': { gradient: 'linear-gradient(135deg, #4ecdc4 0%, #44a8b3 100%)', icon: 'ü§∏' },
  'Play': { gradient: 'linear-gradient(135deg, #f6d365 0%, #fda085 100%)', icon: 'üéÆ' },
  'Understanding': { gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)', icon: 'üß©' },
  'Writing': { gradient: 'linear-gradient(135deg, #a8d8ea 0%, #6bb3d9 100%)', icon: '‚úèÔ∏è' },
};
---

<Base title="Kung Fu Family ‚Äî Waldorf Parenting Strategies" description="Evidence-based parenting strategies from Rudolf Steiner's Waldorf education. Practical techniques for raising children with purpose.">

  <header class="header">
    <div class="header-inner">
      <a href="/" class="logo">Kung Fu <span>Family</span></a>

      <div class="filters">
        <div class="filter-group">
          <button class="filter-btn" data-filter="topic">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
              <path d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
            <span>Topic</span>
          </button>
          <div class="filter-dropdown" data-dropdown="topic">
            <div class="filter-option selected" data-value="">All</div>
            {topics.map(t => <div class="filter-option" data-value={t}>{t}</div>)}
          </div>
        </div>

        <div class="filter-group">
          <button class="filter-btn" data-filter="type">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
              <rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/>
            </svg>
            <span>Type</span>
          </button>
          <div class="filter-dropdown" data-dropdown="type">
            <div class="filter-option selected" data-value="">All</div>
            {types.map(t => <div class="filter-option" data-value={t}>{t.charAt(0).toUpperCase() + t.slice(1)}</div>)}
          </div>
        </div>
      </div>

      <span class="results-count">{strategies.length} strategies</span>
    </div>
  </header>

  <main class="grid-section">
    <div class="grid">
      {strategies.map(s => {
        const style = topicGradients[s.topic] || { gradient: 'linear-gradient(135deg, #667eea, #764ba2)', icon: 'üìñ' };
        return (
          <a href={`/strategies/${s.slug}/`} class="card" data-topic={s.topic} data-type={s.type}>
            <div class="card-image" style={`background: ${style.gradient}`}>
              <div class="card-image-placeholder">{style.icon}</div>
            </div>
            <div class="card-overlay">
              <div class="card-tags">
                <span class="card-tag">{s.topic}</span>
                <span class="card-tag source">{s.book}</span>
                {s.ageRange && <span class="card-tag age">Ages {s.ageRange}</span>}
              </div>
              <h2 class="card-title">{s.title}</h2>
              <p class="card-excerpt">{s.excerpt}</p>
            </div>
          </a>
        );
      })}
    </div>
  </main>

  <style>
    .header {
      position: sticky;
      top: 0;
      z-index: 100;
      background: rgba(250, 250, 248, 0.95);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid var(--border);
    }

    .header-inner {
      max-width: 1400px;
      margin: 0 auto;
      padding: 16px 24px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 24px;
    }

    .logo {
      font-family: 'DM Serif Display', serif;
      font-size: 1.5rem;
      color: var(--accent);
      white-space: nowrap;
    }

    .logo span { color: var(--text); }

    .filters {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter-group { position: relative; }

    .filter-btn {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 10px 16px;
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 8px;
      color: var(--text-secondary);
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
      font-family: inherit;
    }

    .filter-btn:hover { background: var(--bg-hover); }

    .filter-btn.active {
      background: var(--accent);
      color: #fff;
      border-color: var(--accent);
    }

    .filter-dropdown {
      position: absolute;
      top: calc(100% + 8px);
      left: 0;
      min-width: 200px;
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 8px;
      display: none;
      z-index: 200;
      box-shadow: 0 20px 40px rgba(0,0,0,0.12);
    }

    .filter-dropdown.show { display: block; }

    .filter-option {
      padding: 10px 12px;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.15s;
      font-size: 14px;
    }

    .filter-option:hover { background: var(--bg-hover); }
    .filter-option.selected { background: var(--accent-light); color: var(--accent); }

    .results-count {
      color: var(--text-muted);
      font-size: 14px;
      margin-left: auto;
    }

    .grid-section {
      max-width: 1400px;
      margin: 0 auto;
      padding: 32px 24px;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
    }

    .card {
      position: relative;
      border-radius: 12px;
      overflow: hidden;
      cursor: pointer;
      transition: transform 0.3s, box-shadow 0.3s;
      aspect-ratio: 3/4;
      box-shadow: 0 2px 12px rgba(0,0,0,0.1);
      display: block;
    }

    .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .card-image {
      position: absolute;
      inset: 0;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .card-image img { width: 100%; height: 100%; object-fit: cover; }
    .card-image-placeholder { font-size: 64px; opacity: 0.3; }

    .card-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.5) 40%, rgba(0,0,0,0) 70%);
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      padding: 20px;
    }

    .card:hover .card-overlay {
      background: linear-gradient(to top, rgba(0,0,0,0.95) 0%, rgba(0,0,0,0.6) 50%, rgba(0,0,0,0.2) 100%);
    }

    .card-tags { display: flex; gap: 8px; margin-bottom: 12px; flex-wrap: wrap; }

    .card-tag {
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 4px 10px;
      border-radius: 4px;
      background: rgba(255,255,255,0.15);
      backdrop-filter: blur(10px);
      color: white;
    }

    .card-tag.source { background: rgba(245, 166, 35, 0.35); color: #f5c56a; }
    .card-tag.age { background: rgba(78, 205, 196, 0.3); color: #7eeee6; }

    .card-title {
      font-family: 'DM Serif Display', serif;
      font-size: 1.4rem;
      line-height: 1.3;
      color: white;
      margin-bottom: 8px;
    }

    .card-excerpt {
      font-size: 13px;
      color: rgba(255,255,255,0.7);
      line-height: 1.5;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    @media (max-width: 768px) {
      .header-inner { flex-direction: column; gap: 16px; }
      .filters { width: 100%; justify-content: center; }
      .results-count { margin-left: 0; }
      .grid { grid-template-columns: repeat(auto-fill, minmax(240px, 1fr)); gap: 16px; }
    }
  </style>

  <script>
    const cards = document.querySelectorAll('.card') as NodeListOf<HTMLElement>;
    const resultsCount = document.querySelector('.results-count')!;
    const filters: Record<string, string> = { topic: '', type: '' };

    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const filterName = (btn as HTMLElement).dataset.filter!;
        const dropdown = document.querySelector(`[data-dropdown="${filterName}"]`);
        const wasOpen = dropdown?.classList.contains('show');
        document.querySelectorAll('.filter-dropdown').forEach(d => d.classList.remove('show'));
        document.querySelectorAll('.filter-btn').forEach(b => {
          if (!filters[(b as HTMLElement).dataset.filter!]) b.classList.remove('active');
        });
        if (!wasOpen) {
          dropdown?.classList.add('show');
          btn.classList.add('active');
        }
      });
    });

    document.querySelectorAll('.filter-option').forEach(opt => {
      opt.addEventListener('click', () => {
        const dropdown = opt.closest('.filter-dropdown') as HTMLElement;
        const filterName = dropdown.dataset.dropdown!;
        const value = (opt as HTMLElement).dataset.value!;
        filters[filterName] = value;
        dropdown.querySelectorAll('.filter-option').forEach(o => o.classList.remove('selected'));
        opt.classList.add('selected');
        const btn = document.querySelector(`[data-filter="${filterName}"]`) as HTMLElement;
        const span = btn.querySelector('span')!;
        if (value) {
          span.textContent = value.charAt(0).toUpperCase() + value.slice(1);
          btn.classList.add('active');
        } else {
          span.textContent = filterName.charAt(0).toUpperCase() + filterName.slice(1);
          btn.classList.remove('active');
        }
        document.querySelectorAll('.filter-dropdown').forEach(d => d.classList.remove('show'));
        let visible = 0;
        cards.forEach(card => {
          const topicMatch = !filters.topic || card.dataset.topic === filters.topic;
          const typeMatch = !filters.type || card.dataset.type === filters.type;
          const show = topicMatch && typeMatch;
          card.style.display = show ? '' : 'none';
          if (show) visible++;
        });
        resultsCount.textContent = `${visible} ${visible === 1 ? 'strategy' : 'strategies'}`;
      });
    });

    document.addEventListener('click', () => {
      document.querySelectorAll('.filter-dropdown').forEach(d => d.classList.remove('show'));
      document.querySelectorAll('.filter-btn').forEach(b => {
        if (!filters[(b as HTMLElement).dataset.filter!]) b.classList.remove('active');
      });
    });
  </script>

</Base>
