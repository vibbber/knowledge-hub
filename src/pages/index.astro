---
import Base from '../layouts/Base.astro';
import { strategies, topics, types } from '../data/strategies';
---

<Base title="Kung Fu Family â€” Waldorf Parenting Strategies" description="Evidence-based parenting strategies from Rudolf Steiner's Waldorf education. Practical techniques for raising children with purpose.">

  <!-- Top bar -->
  <header class="topbar">
    <a href="/" class="logo">Kung Fu <span>Family</span></a>
    <span class="strategy-count">{strategies.length} strategies</span>
  </header>

  <div class="layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <nav class="sidebar-nav">
        <div class="sidebar-section">
          <div class="sidebar-label">TOPIC</div>
          <button class="sidebar-item active" data-filter="topic" data-value="">All</button>
          {topics.map(t => (
            <button class="sidebar-item" data-filter="topic" data-value={t}>{t}</button>
          ))}
        </div>
        <div class="sidebar-section">
          <div class="sidebar-label">TYPE</div>
          <button class="sidebar-item active" data-filter="type" data-value="">All</button>
          {types.map(t => (
            <button class="sidebar-item" data-filter="type" data-value={t}>{t.charAt(0).toUpperCase() + t.slice(1)}</button>
          ))}
        </div>
      </nav>
    </aside>

    <!-- Masonry grid -->
    <main class="masonry-container">
      <div class="masonry" id="masonry">
        {strategies.map(s => (
          <a
            href={`/strategies/${s.slug}/`}
            class="tile"
            data-topic={s.topic}
            data-type={s.type}
            data-aspect={s.imageAspect || 1}
          >
            <div class="tile-img" style={`aspect-ratio: ${s.imageAspect || 1}`}>
              {s.image ? (
                <img src={s.image} alt={s.imageAlt || s.title} loading="lazy" />
              ) : (
                <div class="tile-placeholder" />
              )}
            </div>
            <div class="tile-overlay">
              <div class="tile-tags">
                <span class="tile-tag">{s.topic}</span>
                {s.ageRange && <span class="tile-tag age">Ages {s.ageRange}</span>}
              </div>
              <h2 class="tile-title">{s.title}</h2>
            </div>
          </a>
        ))}
      </div>
    </main>
  </div>

  <!-- Mobile filter bar -->
  <div class="mobile-filters">
    <div class="mobile-filter-scroll">
      <button class="mobile-chip active" data-filter="topic" data-value="">All</button>
      {topics.map(t => (
        <button class="mobile-chip" data-filter="topic" data-value={t}>{t}</button>
      ))}
    </div>
  </div>

  <style>
    .topbar {
      position: sticky;
      top: 0;
      z-index: 100;
      background: rgba(250, 250, 248, 0.97);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid var(--border);
      padding: 14px 24px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .logo {
      font-family: 'DM Serif Display', serif;
      font-size: 1.4rem;
      color: var(--accent);
      white-space: nowrap;
    }
    .logo span { color: var(--text); }

    .strategy-count {
      font-size: 13px;
      color: var(--text-muted);
    }

    /* Layout */
    .layout {
      display: flex;
      min-height: calc(100vh - 53px);
    }

    /* Sidebar */
    .sidebar {
      width: 180px;
      flex-shrink: 0;
      border-right: 1px solid var(--border);
      padding: 20px 0;
      position: sticky;
      top: 53px;
      height: calc(100vh - 53px);
      overflow-y: auto;
    }

    .sidebar-section {
      margin-bottom: 24px;
    }

    .sidebar-label {
      font-size: 11px;
      font-weight: 600;
      letter-spacing: 0.8px;
      color: var(--text-muted);
      padding: 0 20px;
      margin-bottom: 6px;
    }

    .sidebar-item {
      display: block;
      width: 100%;
      text-align: left;
      padding: 8px 20px;
      font-size: 14px;
      color: var(--text-secondary);
      background: none;
      border: none;
      cursor: pointer;
      font-family: inherit;
      border-radius: 0;
      transition: all 0.15s;
    }

    .sidebar-item:hover {
      background: var(--bg-hover);
      color: var(--text);
    }

    .sidebar-item.active {
      color: var(--accent);
      font-weight: 600;
      background: var(--accent-light);
    }

    /* Masonry */
    .masonry-container {
      flex: 1;
      min-width: 0;
      padding: 4px;
    }

    .masonry {
      column-count: 4;
      column-gap: 4px;
    }

    .tile {
      display: block;
      break-inside: avoid;
      margin-bottom: 4px;
      position: relative;
      overflow: hidden;
      border-radius: 2px;
      cursor: pointer;
    }

    .tile-img {
      width: 100%;
      position: relative;
      overflow: hidden;
    }

    .tile-img img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.3s ease;
    }

    .tile:hover .tile-img img {
      transform: scale(1.03);
    }

    .tile-placeholder {
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #667eea, #764ba2);
    }

    /* Overlay - hidden by default, shown on hover */
    .tile-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.85) 0%, rgba(0,0,0,0.3) 40%, transparent 70%);
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      padding: 12px;
      opacity: 0;
      transition: opacity 0.25s ease;
    }

    .tile:hover .tile-overlay {
      opacity: 1;
    }

    .tile-tags {
      display: flex;
      gap: 6px;
      margin-bottom: 6px;
      flex-wrap: wrap;
    }

    .tile-tag {
      font-size: 10px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.4px;
      padding: 3px 7px;
      border-radius: 3px;
      background: rgba(255,255,255,0.18);
      backdrop-filter: blur(8px);
      color: white;
    }

    .tile-tag.age {
      background: rgba(78, 205, 196, 0.3);
      color: #7eeee6;
    }

    .tile-title {
      font-family: 'DM Serif Display', serif;
      font-size: 0.95rem;
      line-height: 1.25;
      color: white;
    }

    /* Hide tiles when filtered out */
    .tile.hidden {
      display: none;
    }

    /* Mobile filters */
    .mobile-filters {
      display: none;
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(250, 250, 248, 0.97);
      backdrop-filter: blur(20px);
      border-top: 1px solid var(--border);
      padding: 10px 0;
      z-index: 100;
    }

    .mobile-filter-scroll {
      display: flex;
      gap: 8px;
      padding: 0 12px;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .mobile-filter-scroll::-webkit-scrollbar { display: none; }

    .mobile-chip {
      flex-shrink: 0;
      padding: 8px 16px;
      font-size: 13px;
      font-weight: 500;
      border-radius: 20px;
      border: 1px solid var(--border);
      background: var(--bg-card);
      color: var(--text-secondary);
      cursor: pointer;
      font-family: inherit;
      transition: all 0.15s;
    }

    .mobile-chip.active {
      background: var(--accent);
      color: white;
      border-color: var(--accent);
    }

    /* Responsive */
    @media (max-width: 1200px) {
      .masonry { column-count: 3; }
    }

    @media (max-width: 768px) {
      .sidebar { display: none; }
      .mobile-filters { display: block; }
      .masonry { column-count: 2; column-gap: 3px; }
      .tile { margin-bottom: 3px; }
      .masonry-container { padding: 3px 3px 60px 3px; }
      .tile-title { font-size: 0.85rem; }
      .tile-overlay { padding: 8px; }
    }

    @media (max-width: 480px) {
      .masonry { column-count: 2; }
    }
  </style>

  <script>
    const tiles = document.querySelectorAll('.tile') as NodeListOf<HTMLElement>;
    const filters: Record<string, string> = { topic: '', type: '' };

    function applyFilters() {
      tiles.forEach(tile => {
        const topicMatch = !filters.topic || tile.dataset.topic === filters.topic;
        const typeMatch = !filters.type || tile.dataset.type === filters.type;
        tile.classList.toggle('hidden', !(topicMatch && typeMatch));
      });
    }

    // Sidebar filters
    document.querySelectorAll('.sidebar-item').forEach(btn => {
      btn.addEventListener('click', () => {
        const el = btn as HTMLElement;
        const filterName = el.dataset.filter!;
        const value = el.dataset.value!;
        filters[filterName] = value;

        // Update active state within this section
        const section = el.closest('.sidebar-section')!;
        section.querySelectorAll('.sidebar-item').forEach(b => b.classList.remove('active'));
        el.classList.add('active');

        applyFilters();
      });
    });

    // Mobile filter chips
    document.querySelectorAll('.mobile-chip').forEach(btn => {
      btn.addEventListener('click', () => {
        const el = btn as HTMLElement;
        const filterName = el.dataset.filter!;
        const value = el.dataset.value!;
        filters[filterName] = value;

        document.querySelectorAll(`.mobile-chip[data-filter="${filterName}"]`).forEach(b => b.classList.remove('active'));
        el.classList.add('active');

        applyFilters();
      });
    });
  </script>

</Base>
