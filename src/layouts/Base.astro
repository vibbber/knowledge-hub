---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'Evidence-based parenting strategies from Waldorf/Steiner education. Practical techniques for raising children with purpose.', ogImage } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalUrl}>

  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  {ogImage && <meta property="og:image" content={ogImage}>}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>

  <!-- Google Search Console verification -->
  <meta name="google-site-verification" content="XZhBq08X0cqx87S691KncajAqwu_GSyPF7YdPLXVtq4" />

  <!-- Google Analytics (GA4) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-BHD2DNV4DW"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-BHD2DNV4DW');
  </script>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet">

  <style is:global>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --bg: #fafaf8;
      --bg-card: #ffffff;
      --bg-hover: #f0eeeb;
      --text: #2a2a2a;
      --text-secondary: #6b6b6b;
      --text-muted: #999;
      --accent: #c8922a;
      --accent-light: rgba(200, 146, 42, 0.12);
      --border: rgba(0,0,0,0.08);
    }

    body {
      font-family: 'DM Sans', system-ui, sans-serif;
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
    }

    a { color: inherit; text-decoration: none; }
  </style>
</head>
<body>
  <!-- Simple password gate for dev -->
  <div id="password-gate" style="display:none; position:fixed; inset:0; background:#fafaf8; z-index:9999; display:flex; align-items:center; justify-content:center;">
    <div style="text-align:center; font-family:'DM Sans',sans-serif;">
      <h2 style="margin-bottom:16px; color:#2a2a2a;">Internal Preview</h2>
      <input type="password" id="pw-input" placeholder="Password" style="padding:12px 16px; font-size:16px; border:1px solid #ddd; border-radius:8px; width:200px;">
      <button onclick="checkPw()" style="margin-left:8px; padding:12px 20px; background:#c8922a; color:white; border:none; border-radius:8px; cursor:pointer; font-size:16px;">Enter</button>
      <p id="pw-error" style="color:#c44; margin-top:12px; display:none;">Wrong password</p>
    </div>
  </div>
  <script is:inline>
    (function() {
      if (localStorage.getItem('kf-auth') === 'donkey') {
        document.getElementById('password-gate').style.display = 'none';
      } else {
        document.getElementById('password-gate').style.display = 'flex';
        document.body.style.overflow = 'hidden';
      }
    })();
    function checkPw() {
      if (document.getElementById('pw-input').value === 'donkey') {
        localStorage.setItem('kf-auth', 'donkey');
        document.getElementById('password-gate').style.display = 'none';
        document.body.style.overflow = '';
      } else {
        document.getElementById('pw-error').style.display = 'block';
      }
    }
    document.getElementById('pw-input')?.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') checkPw();
    });
  </script>
  <slot />
</body>
</html>
